<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/dialog_add_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/sukhumvit_light"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อความ"
        android:textSize="24dp"
        android:layout_margin="16dp"
        />

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EDEDED"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:id="@+id/custom_dialog_edittext"
            android:fontFamily="@font/sukhumvit_light"
            android:paddingLeft="20dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textSize="20dp"
            android:hint="จำนวนชั้น"
            android:inputType="textPersonName" />
        <requestFocus />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="right"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/dialog_add_cancel"
            android:layout_width="120dp"
            app:cardBackgroundColor="#b3b3b3"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp"
            >
            <TextView
                android:fontFamily="@font/sukhumvit_bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยกเลิก"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/dialog_add_confirm"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            app:cardBackgroundColor="#0060bf"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp"
            >
            <TextView
                android:fontFamily="@font/sukhumvit_bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยืนยัน"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>